        <TextBlock Name="dTb" Grid.Row="6" Grid.Column="1" Style="{StaticResource TextBlockStyle}"
                    Text="Delivery"/>
        <TextBlock Name="lnTb" Grid.Row="7" Grid.Column="1" Style="{StaticResource TextBlockStyle}"
                    Text="Longitude"/>
        <TextBlock Name="ltTb" Grid.Row="8" Grid.Column="1" Style="{StaticResource TextBlockStyle}"
