                                        <Setter TargetName="Border" Property="CornerRadius" Value="10" />
                                        <Setter TargetName="Border" Property="Width" Value="150" />-->
                                        <Setter Property="HeaderTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <TextBlock Text="{TemplateBinding Content}"> <!--TextDecorations="Underline">-->
                                                        <TextBlock.TextDecorations>
                                                            <TextDecoration>
                                                                <TextDecoration.Pen>
                                                                    <Pen Brush="Red" Thickness="2" />
                                                                </TextDecoration.Pen>
                                                            </TextDecoration>
                                                        </TextBlock.TextDecorations>

                                                    </TextBlock>
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <!--<Setter TargetName="Border" Property="Height" Value="30" />-->
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Border" Property="Background" Value="Transparent" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
