<Window x:Class="PL.CustomerInterface"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="CustomerInterface" Height="450" Width="800">
    <Grid>
        <TabControl BorderBrush="Transparent" TabStripPlacement="Left" Margin="20">
            <TabControl.Resources>
                <Style TargetType="{x:Type TabItem}">
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Foreground" Value="#48637E" />
                            <Setter Property="HeaderTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock Text="{TemplateBinding Content}" TextDecorations="Underline"></TextBlock>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="False">
                            <Setter Property="Foreground" Value="#B4B4B4" />
                            <Setter Property="HeaderTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <TextBlock Text="{TemplateBinding Content}" ></TextBlock>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TabControl.Resources>
            <TabItem Header="My Account" BorderBrush="{x:Null}" Background="{x:Null}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Image Grid.Column="4" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="2" Source="C:\Users\aviga\source\repos\avigayilm\DotNet5782_9033_6996\PL\Icons\customers.png">
                        <Image.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="50" />
                            </Style>
                        </Image.Resources>
                    </Image>
                    <TextBlock Text="Name" Grid.Column="3" Grid.Row="4"/>
                    <TextBox Text="{Binding me.Name, Mode=TwoWay}" Grid.Column="5" Grid.Row="4"/>
                    <TextBlock Text="Id" Grid.Column="3" Grid.Row="5"/>
                    <TextBox Text="{Binding me.Id, Mode=TwoWay}" Grid.Column="5" Grid.Row="5"/>
                    <TextBlock Text="PhoneNumber" Grid.Column="3" Grid.Row="6"/>
                    <TextBox Text="{Binding me.PhoneNumber, Mode=TwoWay}" Grid.Column="5" Grid.Row="6"/>
                    <TextBlock Text="Longitude" Grid.Column="3" Grid.Row="7"/>
                    <TextBox Text="{Binding me.Loc.Longitude, Mode=TwoWay}" Grid.Column="5" Grid.Row="7"/>
                    <TextBlock Text="Latitude" Grid.Column="3" Grid.Row="8"/>
                    <TextBox Text="{Binding me.Loc.Latitude, Mode=TwoWay}" Grid.Column="5" Grid.Row="8"/>
                </Grid>
            </TabItem>

            <TabItem Header="Send A parcel" BorderBrush="{x:Null}" Background="{x:Null}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Send A parcel" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="3" FontSize="20"/>
                    <TextBlock Name="wghtTxt" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Center" Text="Weight"/>
                    <TextBlock Name="prioTxt" Grid.Row="4" Grid.Column="4" HorizontalAlignment="Center" Text="Priority"/>
                    <TextBlock Name="recTxt" Grid.Row="4" Grid.Column="6" HorizontalAlignment="Center" Text="ReceiverId"/>
                    <ComboBox Name="weiCBx"  Grid.Row="5" Grid.Column="2"  SelectedItem="{Binding parcel.Weight , Mode=TwoWay}" SelectedIndex="3"  Background="AliceBlue" Margin="10" />
                    <ComboBox Name="prioCbx"  Grid.Row="5" Grid.Column="4"  SelectedItem="{Binding parcel.Priority ,Mode=TwoWay}" SelectedIndex="3"   Background="AliceBlue" Margin="10" />
                    <ComboBox Name="recIdCBx" Grid.Row="5" Grid.Column="6"  SelectedItem="{Binding parcel.Receiver.Id , Mode=TwoWay, ValidatesOnDataErrors=True}" SelectedIndex="0"  Background="AliceBlue" Margin="10" />
                    <Button Content="Send" Grid.Row="8" Grid.Column="4" Click="Send_Click" >
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10" />
                            </Style>
                        </Button.Resources>
                    </Button>

                </Grid>
            </TabItem>

            <TabItem Header="See Parcels" BorderBrush="{x:Null}" Background="{x:Null}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="57*"/>
                        <ColumnDefinition Width="57*"/>
                        <ColumnDefinition Width="57*"/>
                        <ColumnDefinition Width="57*"/>
                        <ColumnDefinition Width="44*"/>
                        <ColumnDefinition Width="13*"/>
                        <ColumnDefinition Width="57*"/>
                        <ColumnDefinition Width="57*"/>
                        <ColumnDefinition Width="57*"/>
                        <ColumnDefinition Width="57*"/>
                        <ColumnDefinition Width="57*"/>
                        <ColumnDefinition Width="57*"/>
                        <ColumnDefinition Width="57*"/>
                        <ColumnDefinition Width="57*"/>
                        <ColumnDefinition Width="57*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Name="sentList" Text="Sent Parcels"
                   Grid.Column="1" Grid.Row="1"  Grid.ColumnSpan="2"/>
                    <ListView x:Name="SentparcelsList" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="6" Grid.RowSpan="5" Margin="0,0,0,50" >
                        <ListView.Background>
                            <ImageBrush Opacity="0.5"/>
                        </ListView.Background>

                        <ListView.ItemContainerStyle>
                            <Style TargetType="{x:Type ListViewItem}">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Customer.Id}" Width="40"/>
                                <GridViewColumn Header="Weight" DisplayMemberBinding="{Binding Customer.Weight}" Width="70"/>
                                <GridViewColumn Header="Priotity" DisplayMemberBinding="{Binding Customer.Priority}" Width="80"/>
                                <GridViewColumn Header="ParcelStatus" DisplayMemberBinding="{Binding Customer.ParcelStatus}" Width="90"/>
                                <GridViewColumn Header="Receiver" DisplayMemberBinding="{Binding Customer.CustomerInP}" Width="110"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                    <TextBlock Name="receivedList" Text="Recieved Parcels" Grid.ColumnSpan="2" HorizontalAlignment="Left"
                   Grid.Column="9" Grid.Row="1" />
                    <ListView x:Name="receivedparcelsList" Grid.Row="2" Grid.Column="9" Grid.ColumnSpan="5" Grid.RowSpan="5" Margin="0,0,0,50">
                        <ListView.Background>
                            <ImageBrush Opacity="0.5"/>
                        </ListView.Background>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="{x:Type ListViewItem}">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Customer.Id}" Width="40"/>
                                <GridViewColumn Header="Weight" DisplayMemberBinding="{Binding Customer.Weight}" Width="70"/>
                                <GridViewColumn Header="Priotity" DisplayMemberBinding="{Binding Customer.Priority}" Width="80"/>
                                <GridViewColumn Header="ParcelStatus" DisplayMemberBinding="{Binding Customer.ParcelStatus}" Width="90"/>
                                <GridViewColumn Header="Sender" DisplayMemberBinding="{Binding Customer.CustomerInP}" Width="110"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="Confirmation" BorderBrush="{x:Null}" Background="{x:Null}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock  Text="Have you received your parcel?" Grid.ColumnSpan="6" FontSize="30" Grid.Column="2" Grid.Row="0" />
                    <TextBlock Text="ParcelId" Grid.Column="3" Grid.Row="2"/>
                    <TextBox Grid.Row="2" Grid.Column="4" Text="{Binding parcelId}"/>
                    <Button  Name="ReceivedParcel" Content="Received Parcel" Grid.Column="3" Grid.Row="3" Click="ReceivedParcel_Click"/>
                    <TextBlock  Text="Is your ParcelPicked up?" Grid.ColumnSpan="6" FontSize="30" Grid.Row="6" Grid.Column="2" />
                    <TextBlock Text="ParcelId" Grid.Column="3" Grid.Row="8"/>
                    <TextBox Grid.Row="8" Grid.Column="4" Text="{Binding parcelId}"/>
                    <Button Name="PickedUpParcel" Content="Parcel was Picked Up" Grid.Column="3" Grid.Row="9" Click="PickedUpParcel_Click"/>
                </Grid>
                
            </TabItem>
            <TabItem Name="DroneTab" Header="Contact us" BorderBrush="Transparent" Background="{x:Null}">
                <Grid Name="customerGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!--<Border BorderThickness="10" BorderBrush="Gray" Grid.Row="1" Grid.RowSpan="9" Grid.ColumnSpan="4" Margin="57,79,90,20"/>-->
                    <TextBlock Text="We'd Love to hear from you!" FontSize="25" HorizontalAlignment="Center" Grid.Column="2" Grid.ColumnSpan="3" Grid.Row="1" VerticalAlignment="Top"/>
                    <TextBlock Text="We're here to help and answer any question you might have. &#x0a; We look forward to hearing from you:)" HorizontalAlignment="Center" Grid.Column="2" Grid.ColumnSpan="3" Grid.Row="1" TextAlignment="Center" Margin="0,35" Grid.RowSpan="2" VerticalAlignment="Top" />
                    <TextBlock Text="Name(required)" VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" FontWeight="Bold" FontSize="15"/>
                    <TextBox Name="nameTxt" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="3" BorderBrush="Gray"/>
                    <TextBlock Text="Email(required)" VerticalAlignment="Center" Grid.Column="1" Grid.Row="4" FontWeight="Bold" FontSize="15"/>
                    <TextBox Name="emailTxt" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="5" BorderBrush="Gray"/>
                    <TextBlock Text="Message(required)" VerticalAlignment="Center" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="6" FontWeight="Bold" FontSize="15"/>
                    <TextBox Name="msgTxt" Grid.ColumnSpan="2" Grid.RowSpan="2" Grid.Row="7" Grid.Column="1" BorderBrush="Gray" />
                    <Button Content="Submit" Grid.Column="1" Grid.Row="10" Margin="5" Click="Submit_Click" >
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10" />
                            </Style>
                        </Button.Resources>
                    </Button>
                    <TextBlock Text="Contactinfo:" Grid.Column="4" Grid.Row="3" FontSize="20" Grid.ColumnSpan="2" />
                    <TextBlock Text="PhoneNumber:" Grid.Column="4" Grid.Row="4" />
                    <TextBlock Text="0532372158:" Grid.Column="5" Grid.Row="4" />
                    <TextBlock Text="Adress:" Grid.Column="4" Grid.Row="5"/>
                    <TextBlock Text="TalSreet, Jerusalem" Grid.Column="5" Grid.Row="5"/>
                    <TextBlock Text="email:" Grid.Column="4" Grid.Row="6" />
                    <TextBlock Text="SkyHigh@tal.com" Grid.Column="5" Grid.Row="6"/>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
